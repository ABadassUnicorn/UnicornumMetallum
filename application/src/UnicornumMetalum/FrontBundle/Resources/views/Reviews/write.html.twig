{% extends "UnicornumMetalumFrontBundle:Common:layout.html.twig" %}
{% block additional_stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/unicornummetalumfront/js/ckeditor/contents.css') }}">
{% endblock %}
{% block title %}{{ 'menu.write'|trans({}, 'messages') }}{% endblock %}
{% block content %}
    {% form_theme form 'UnicornumMetalumFrontBundle:Form:TextAreaForCkEditor.html.twig' %}
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.category) }}
        {{ form_row(form.review) }}
        {{ form_row(form.tags) }}
        {{ form_row(form.save) }}
    {{ form_end(form) }}
{% endblock %}
{% block javascripts_body %}
    <script src="{{ asset('bundles/unicornummetalumfront/js/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('bundles/unicornummetalumfront/js/ckeditor/init.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            CKEDITOR.replace('editor1');
            initCK();
        });
    </script>
{% endblock %}